@model xDC_Web.Models.ViewInflowFundStatusForm

@{
    ViewBag.Title = "View Inflow Funds";
}


<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    @(Html.DevExtreme().Button()
                        .Type(ButtonType.Back)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ window.location = "@Url.Action("Index", "Amsd")"; } </text>)
                        )
                </div>
                @if (Model.ApprovePermission)
                {
                    <div>
                        @(Html.DevExtreme().Button()
                            .Text("Approve")
                            .Icon("check")
                            .Type(ButtonType.Success)
                            .StylingMode(ButtonStylingMode.Contained)
                            )
                    </div>
                    <div>
                        @(Html.DevExtreme().Button()
                            .Text("Reject")
                            .Icon("remove")
                            .Type(ButtonType.Normal)
                            .StylingMode(ButtonStylingMode.Contained)
                            )
                    </div>
                }
                @if (User.IsInRole("Power User"))
                {
                    <div>
                        @(Html.DevExtreme().Button()
                            .Text("Admin Edit")
                            .Icon("edit")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Contained)
                            )
                    </div>
                }
                
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">
                <div>
                    @(Html.DevExtreme().DropDownButton()
                        .ID("PrintBtn")
                        .Text("Print")
                        .Icon("print")
                        .DropDownOptions(options => options.Width(230))
                        .StylingMode(ButtonStylingMode.Contained)
                        .DataSource(new List<string>()
                        {
                            "Excel Workbook (*.xlsx)",
                            "PDF"
                        })
                        .OnItemClick(@<text> function(e){ alert(e); }</text>)
                        )
                </div>
            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="stepper-wrapper">
                <div class="stepper-item completed">
                    <div class="step-counter">1</div>
                    <div class="step-name">Preparation</div>
                </div>
                <div class="stepper-item active">
                    <div class="step-counter">2</div>
                    <div class="step-name">Approval</div>
                </div>
                <div class="stepper-item">
                    <div class="step-counter">3</div>
                    <div class="step-name">Done</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="dx-fieldset">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="dx-field">
                                    <div class="dx-field-label">Form ID</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().TextBoxFor(m => m.Id)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                                <div class="dx-field">
                                    <div class="dx-field-label">Preparer</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().TextBoxFor(m => m.PreparedBy)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                                <div class="dx-field">
                                    <div class="dx-field-label">Prepared Date</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().DateBoxFor(m => m.PreparedDate)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="dx-field">
                                    <div class="dx-field-label">Status</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().TextBoxFor(m => m.FormStatus)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                                <div class="dx-field">
                                    <div class="dx-field-label">Approver</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().TextBoxFor(m => m.ApprovedBy)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                                <div class="dx-field">
                                    <div class="dx-field-label">Approved Date</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().DateBoxFor(m => m.ApprovedDate)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    </div>
                    <div id="inflowFundsGrid1"></div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/amsd/inflowFundsFormStatus.js"></script>
}