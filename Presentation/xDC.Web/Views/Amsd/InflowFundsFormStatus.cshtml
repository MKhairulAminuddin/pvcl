@model xDC_Web.Models.ViewInflowFundStatusForm

@{
    ViewBag.Title = "View Inflow Funds";
}


<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    @(Html.DevExtreme().Button()
                        .Type(ButtonType.Back)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ window.location = "@Url.Action("Index", "Amsd")"; } </text>)
                        )
                </div>
                @if (Model.ApprovePermission && (Model.FormStatus != "Approved" || Model.FormStatus != "Rejected"))
                {
                    if (Model.FormStatus != "Approved" && Model.FormStatus != "Rejected")
                    {
                        <div>
                            @(Html.DevExtreme().Button()
                                .ID("approveBtn")
                                .Text("Approve")
                                .Icon("check")
                                .Type(ButtonType.Success)
                                .StylingMode(ButtonStylingMode.Contained)
                                )
                        </div>
                        <div>
                            @(Html.DevExtreme().Button()
                                .ID("rejectBtn")
                                .Text("Reject")
                                .Icon("remove")
                                .Type(ButtonType.Normal)
                                .StylingMode(ButtonStylingMode.Contained)
                                )
                        </div>
                    }
                }
                @if (Model.AdminEditPermission)
                {
                    <div>
                        @(Html.DevExtreme().Button()
                            .Text("Admin Edit")
                            .Icon("edit")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Contained)
                            .OnClick(@<text> function(){ window.location = "@Url.Action("EditInflowFundsForm", "Amsd")?id=@Model.Id"; } </text>)
                            )
                    </div>
                }
                <div>
                    <div id="printBtn"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.FormStatus == "Preparation")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item">
                        <div class="step-counter">3</div>
                        <div class="step-name">Approve/Reject</div>
                    </div>
                </div>
            }

            @if (Model.FormStatus == "Pending Approval")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item active">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item">
                        <div class="step-counter">3</div>
                        <div class="step-name">Approve/Reject</div>
                    </div>
                </div>
            }

            @if (Model.FormStatus == "Approved")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">3</div>
                        <div class="step-name">Approved</div>
                    </div>
                </div>
            }

            @if (Model.FormStatus == "Rejected")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item rejected active">
                        <div class="step-counter">3</div>
                        <div class="step-name">Rejected</div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="box box-solid">
                <div class="box-body">
                    <div id="inflowFundsGrid1"></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="dx-fieldset">
                        <div class="dx-field">
                            <div class="dx-field-label">Form ID</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.Id)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Status</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.FormStatus)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Preparer</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.PreparedBy)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Prepared Date</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().DateBoxFor(m => m.PreparedDate)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .DisplayFormat("dd/MM/yyyy hh:mm a")
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Approver</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.ApprovedBy)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Approved Date</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().DateBoxFor(m => m.ApprovedDate)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .DisplayFormat("dd/MM/yyyy hh:mm a")
                                    .ReadOnly(true))
                            </div>
                        </div>
                        @if (Model.IsAdminEdited)
                        {
                            <div class="dx-field">
                                <div class="dx-field-label text-red">Admin Edited By</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().TextBoxFor(m => m.AdminEditedBy)
                                        .StylingMode(EditorStylingMode.Underlined)
                                        .ReadOnly(true))
                                </div>
                            </div>
                            <div class="dx-field">
                                <div class="dx-field-label text-red">Admin Edited Date</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().DateBoxFor(m => m.AdminEditedDate)
                                        .StylingMode(EditorStylingMode.Underlined)
                                        .DisplayFormat("dd/MM/yyyy hh:mm a")
                                        .ReadOnly(true))
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            @if (Model.IsApprovedOrRejected)
            {
                <div class="box box-solid">
                    <div class="box-body">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Approval/Rejection Notes</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().TextAreaFor(m => m.ApprovalOrRejectionNotes)
                                        .StylingMode(EditorStylingMode.Underlined)
                                        .ReadOnly(true))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div id="approvalNoteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Approval Note:</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        @(Html.DevExtreme().TextArea()
                            .ID("approvalNoteTextBox")
                            .Height(90)
                            )
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("approveFormBtn")
                        .Text("Approve")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                    @(Html.DevExtreme().Button()
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ $('#approvalNoteModal').modal('hide'); } </text>)
                        )
                </div>
            </div>
        </div>
    </div>
</div>

<div id="rejectionNoteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Rejection Note:</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        @(Html.DevExtreme().TextArea()
                            .ID("rejectionNoteTextBox")
                            .Height(90)
                            )
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("rejectFormBtn")
                        .Text("Reject")
                        .Type(ButtonType.Danger)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                    @(Html.DevExtreme().Button()
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ $('#rejectionNoteModal').modal('hide'); } </text>)
                        )
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/Scripts/app/amsd/inflowFundsFormStatus.js"></script>
}