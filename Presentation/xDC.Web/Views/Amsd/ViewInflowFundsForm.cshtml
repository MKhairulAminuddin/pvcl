@model xDC_Web.Models.MailMerge.AmsdInflowFundFormPreviewModel

@{
    ViewBag.Title = "View Inflow Funds";
}


<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container" style="padding: 10px">
                <div>
                    @(Html.DevExtreme().Button()
                        .Text("Approve")
                        .Icon("check")
                        .Type(ButtonType.Success)
                        .StylingMode(ButtonStylingMode.Outlined)
                        )
                </div>
                <div>
                    @(Html.DevExtreme().Button()
                        .Text("Reject")
                        .Icon("remove")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Outlined)
                        )
                </div>
                <div>
                    @(Html.DevExtreme().Button()
                        .Text("Admin Edit")
                        .Icon("edit")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Outlined)
                        )
                </div>
                <div>
                    @(Html.DevExtreme().Button()
                        .Text("Print")
                        .Icon("print")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Outlined)
                        )
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">
            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @Html.Partial("_viewInflowFundsForm", Model)
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/amsd/viewInflowFundsForm.js"></script>
}