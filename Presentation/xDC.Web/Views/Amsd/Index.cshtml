@model dynamic

@{
    ViewBag.Title = "AMSD";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    @(Html.DevExtreme().Button()
                        .Text("New Inflow Funds")
                        .Icon("plus")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Outlined)
                        .OnClick(@<text>  function(){ window.location = "@Url.Action("NewInflowFundsForm", "Amsd")"; } </text>)
                        )
                </div>
                
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">
                
            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div id="amsdGrid" class="grid-container"></div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/amsd/index.js"></script>
}