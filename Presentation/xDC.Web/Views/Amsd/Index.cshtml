@model xDC.Domain.Web.AMSD.InflowFundForm.InflowFundFormLandingPage

@{
    ViewBag.Title = "AMSD";
    ViewBag.Subtitle = "Inflow Fund Forms";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-3">
            <div class="kf1-info-box">
                <span class="kf1-info-box-icon kf1-bg-dark"><i class="fa fa-list"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Today's Submission</span>
                    <span class="info-box-number">@Model.CountTodaySubmission</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kf1-info-box">
                <span class="kf1-info-box-icon kf1-bg-orange"><i class="fa fa-clock-o"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Pending Approval</span>
                    <span class="info-box-number">@Model.CountTodayPendingApproval</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kf1-info-box">
                <span class="kf1-info-box-icon kf1-bg-green"><i class="fa fa-thumbs-o-up"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Approved</span>
                    <span class="info-box-number">@Model.CountTodayApproved</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="kf1-info-box">
                <span class="kf1-info-box-icon kf1-bg-red"><i class="fa fa-thumbs-o-down"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Rejected</span>
                    <span class="info-box-number">@Model.CountTodayRejected</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    @(Html.DevExtreme().Button()
                        .Type(ButtonType.Default)
                        .Icon("plus")
                        .Text("Create Inflow Fund Form")
                        .ID("newInflowFundBtn")
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ window.location = "@Url.Action("InflowFund_New", "Amsd")"; } </text>)
                        )
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header">
                    <div class="pull-right">
                        @(Html.DevExtreme().Button()
                            .ID("todayFilterBtn")
                            .Text("Today's Submission")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Outlined)
                            )
                        @(Html.DevExtreme().Button()
                            .ID("draftFilterBtn")
                            .Text("Draft")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Outlined)
                            )
                        @(Html.DevExtreme().Button()
                            .ID("pendingApprovalFilterBtn")
                            .Text("Pending Approval")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Outlined)
                            )
                        @(Html.DevExtreme().Button()
                            .ID("approvedFilterBtn")
                            .Text("Approved")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Outlined)
                            )
                        @(Html.DevExtreme().Button()
                            .ID("rejectedFilterBtn")
                            .Text("Rejected")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Outlined)
                            )
                        @(Html.DevExtreme().Button()
                            .ID("clearFilterBtn")
                            .Icon("fa fa-undo")
                            .Text("Clear Filter")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Outlined)
                            )
                    </div>
                </div>
                <div class="box-body">
                    <div id="amsdGrid" class="grid-container"></div>
                </div>
            </div>
            
        </div>
    </div>
</section>

<div id="loadpanel"></div>


<div id="retractSubmissionModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="retractSubmissionModalContainer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Confirm retract submission ?</h4>
            </div>

            <div class="modal-content">
                <div style="padding:10px">By retract form submission, the form will be turn into Draft status which you will have the ability to edit it and resubmit for approval.</div>
                <div style="padding:10px">
                    <table class="table table-hover table-condensed">
                        <tbody>
                            <tr>
                                <th scope="row">Form ID:</th>
                                <td><span id="retractFormId"></span></td>
                            </tr>
                            <tr>
                                <th scope="row">Prepared By:</th>
                                <td><span id="retractFormPreparedBy"></span></td>
                            </tr>
                            <tr>
                                <th scope="row">Submission Date:</th>
                                <td><span id="retractFormSubmissionDate"></span></td>
                            </tr>
                            <tr>
                                <th scope="row">Assigned Approver:</th>
                                <td><span id="retractFormAssignedApprover"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <div class="pull-left">
                    @(Html.DevExtreme().Button()
                        .ID("retractFormBtn")
                        .Text("Proceed")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                </div>
                <div class="pull-right">
                    @(Html.DevExtreme().Button()
                        .ID("retractFormCancelBtn")
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                </div>
                
                
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/app/amsd/index.js"></script>
}