@model xDC_Web.ViewModels.Fid.EditFcaAccountAssignmentVM
@{
    ViewBag.Title = "FCA Account Assignment";
}



<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div style="display: inline-block">
                    @(Html.DevExtreme().Button()
                        .Type(ButtonType.Back)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ window.location = "@Url.Action("FcaAccountAssignment", "Fid")"; } </text>)
                        )
                </div>
                <div id="saveChangesBtn"></div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">
            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form id="fcaAccountAssignmentForm">
                <div class="row">
                    <div class="col-md-12">
                        
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-solid">
                            <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-4">

                                            <div class="dx-fieldset">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="dx-field">
                                                            <div class="dx-field-label">Settlement Date</div>
                                                            <div class="dx-field-value">
                                                                @(Html.DevExtreme().DateBoxFor(m => m.SettlementDate)
                                                                    .ID("settlementDateBox")
                                                                    .DisplayFormat("dd/MM/yyyy")
                                                                    .StylingMode(EditorStylingMode.Filled)
                                                                    .ReadOnly(true)
                                                                    )
                                                            </div>
                                                        </div>
                                                        <div class="dx-field">
                                                            <div class="dx-field-label">Currency</div>
                                                            <div class="dx-field-value">
                                                                @(Html.DevExtreme().TextBoxFor(m => m.Currency)
                                                                    .ID("currencySelectBox")
                                                                    .StylingMode(EditorStylingMode.Filled)
                                                                    .ReadOnly(true)
                                                                    )
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="dx-fieldset">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="dx-field">
                                                            <div class="dx-field-label" style="font-weight: bold">Opening Balance</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div id="openingBalanceGrid" class="grid-container"></div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-8"></div>
                                    </div>
                                
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="dx-field">
                                                <div class="dx-field-label" style="font-weight: bold">Daily Trade Settlement</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="dx-field">
                                                <div id="equityGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="bondGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="cpGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="notesPaperGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="repoGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="couponGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="feesGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="mtmGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="fxSettlementGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="contributionCreditedGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="altidGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                            <div class="dx-field">
                                                <div id="othersGrid" class="grid-container" style="width: 100%"></div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts
{

<script src="~/Scripts/app/fid/fcaAccountAssignmentEdit.js"></script>

}
