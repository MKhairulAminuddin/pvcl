<div id="retractSubmissionModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="retractSubmissionModalContainer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Confirm retract submission ?</h4>
            </div>

            <div class="modal-content">
                <div style="padding:10px">By retract form submission, the form will be turn into Draft status which you will have the ability to edit it and resubmit for approval.</div>
                <div style="padding:10px">
                    <table class="table table-hover table-condensed">
                        <tbody>
                            <tr>
                                <th scope="row">Form ID:</th>
                                <td><span id="retractFormId"></span></td>
                            </tr>
                            <tr>
                                <th scope="row">Prepared By:</th>
                                <td><span id="retractFormPreparedBy"></span></td>
                            </tr>
                            <tr>
                                <th scope="row">Submission Date:</th>
                                <td><span id="retractFormSubmissionDate"></span></td>
                            </tr>
                            <tr>
                                <th scope="row">Assigned Approver:</th>
                                <td><span id="retractFormAssignedApprover"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <div class="pull-left">
                    @(Html.DevExtreme().Button()
                        .ID("retractFormBtn")
                        .Text("Proceed")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                </div>
                <div class="pull-right">
                    @(Html.DevExtreme().Button()
                        .ID("retractFormCancelBtn")
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                </div>
            </div>
        </div>
    </div>
</div>