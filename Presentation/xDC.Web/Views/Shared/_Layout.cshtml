@using xDC_Web.Extension
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@HttpContext.Current.Application["AppName"]</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @* Uncomment to use the HtmlEditor control *@
    @* <script src="https://unpkg.com/devextreme-quill/dist/dx-quill.min.js"></script> *@

    @Styles.Render("~/Content/bundle")
    @Styles.Render("~/Content/DevExtremeBundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="~/" class="logo">
                <span class="logo-mini"><img src="~/Content/images/kwap_logo_sm.svg" width="40" alt="KWAP" /></span>
                <span class="logo-lg"><img src="~/Content/images/kwap_logo_lg.svg" width="110" alt="KWAP" /></span>
            </a>

            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <div class="navbar-custom-menu">

                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("Logoff", "Login", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()

                            <ul class="nav navbar-nav">
                                <li class="dropdown notifications-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-bell-o"></i>
                                        <span class="label label-danger">2</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li>
                                            <ul class="menu">
                                                <li>
                                                    <a href="#">
                                                        <i class="fa fa-exclamation-triangle text-yellow"></i> 2 AMSD form submitted
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="fa fa-info-circle text-green"></i> Your form #132 have been approved
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li class="footer"><a href="#">View all</a></li>
                                    </ul>
                                </li>


                                <li class="dropdown user user-menu">
                                    <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                                        <img src="~/Content/images/profile.png" class="user-image" alt="User Image">
                                        <span class="hidden-xs"><i class="fa fa-caret-down"></i></span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li class="dropdown-header" style="color: white">Logged in as :</li>
                                        <li class="dropdown-header" style="color: white">@User.Identity.Name</li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="#"><i class="fa fa-wrench"></i> Settings</a></li>
                                        <li>
                                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Sign Out</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>

                        }
                    }

                </div>
            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu" data-widget="tree" data-animation-speed="100">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-desktop"></i> <span>Dashboard</span></a></li>
                    @if (MenuSecurity.AmsdMenu)
                    {
                        <li><a href="@Url.Action("Index", "Amsd")"><i class="fa fa-circle-thin"></i> <span>AMSD</span></a></li>
                    }
                    @if (MenuSecurity.FidMenu)
                    {
                        <li><a href="#"><i class="fa fa-circle-thin"></i> <span>FID</span></a></li>
                    }
                    @if (MenuSecurity.IisdMenu)
                    {
                        <li><a href="@Url.Action("Index", "Iisd")"><i class="fa fa-circle-thin"></i> <span>IISD</span></a></li>
                    }
                    @if (MenuSecurity.PowerUsersMenu)
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-sliders"></i> <span>Settings</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("DropdownConfig","Setting")"><i class="fa fa-circle-thin"></i> <span>Dropdown Config</span></a></li>
                                <li><a href="@Url.Action("ApplicationConfig","Setting")"><i class="fa fa-circle-thin"></i> <span>Application Config</span></a></li>
                                <li><a href="@Url.Action("Workflow","Setting")"><i class="fa fa-circle-thin"></i> <span>Workflow</span></a></li>
                                <li><a href="@Url.Action("AuditTrail","Setting")"><i class="fa fa-circle-thin"></i> <span>Audit Trail</span></a></li>
                            </ul>
                        </li>
                    }
                    @if (MenuSecurity.AdminOnlyMenu)
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-user-md"></i> <span>Administration</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("UserManagement","Admin")"><i class="fa fa-circle-thin"></i> <span>Users</span></a></li>
                                <li><a href="@Url.Action("UserManagement","Admin")"><i class="fa fa-circle-thin"></i> <span>Group</span></a></li>
                                <li><a href="@Url.Action("SystemInformation","Admin")"><i class="fa fa-circle-thin"></i> <span>System Information</span></a></li>
                                <li><a href="@Url.Action("SystemLogs","Admin")"><i class="fa fa-circle-thin"></i> <span>System Logs</span></a></li>
                                <li><a href="~/hangfire"><i class="fa fa-circle-thin"></i> <span>Task Scheduler</span></a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </section>
        </aside>

        <div id="loadPanelContainer"></div>

        <div id="pageContent" class="content-wrapper">
            @if (!string.IsNullOrEmpty(@ViewBag.Title))
            {
                <section class="content-header content-header">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </section>
            }

            <section class="content-header content-alert">
                <div class="row">
                    <div class="col-md-12">
                        <div id="error_container"></div>
                    </div>
                </div>
            </section>

            @RenderBody()

        </div>

        <footer class="main-footer clearfix">
            <div class="pull-left">
                
            </div>
            <div class="pull-right hidden-xs">
                <a class="label label-default">v @HttpContext.Current.Application["Version"]</a>
            </div>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>

</html>