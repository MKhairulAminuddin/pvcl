@model xDC_Web.ViewModels.Admin.UserManagementVM

@{
    ViewBag.Title = "User Management";
}


<section class="content container-fluid">

    <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">REGISTERED USERS</h3>
                </div>
                <div class="box-body">
                    @foreach (var item in Model.TotalRegisteredUsers)
                    {
                        <span>@item.Key (<strong>@item.Value</strong>)</span><br />
                    }
                </div>

            </div>

        </div>

        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">USERS BY DEPARTMENT</h3>
                </div>
                <div class="box-body" style="margin-left: 0">
                    @foreach (var item in Model.TotalDepartmentBreakdown)
                    {
                        <span>@item.Key (<strong>@item.Value</strong>)</span><br />
                    }

                </div>

            </div>

        </div>


        <div class="clearfix visible-sm-block"></div>
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">USERS BY GROUPS</h3>
                </div>
                <div class="box-body" style="margin-left: 0">
                    @foreach (var item in Model.TotalUserGroupBreakdown)
                    {
                        <span>@item.Key (<strong>@item.Value</strong>)</span><br />
                    }
                </div>

            </div>

        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-body">
                    <div id="grid1" class="grid-container"></div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{

    <script src="~/Scripts/app/admin/userManagement.js"></script>
}