
<div id="addNewRoleModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="addNewRoleModalContainer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Add New Role</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>Role Name :</p>
                            @(Html.DevExtreme().TextBox()
                                .ID("newRoleNameTextBox")
                                .StylingMode(EditorStylingMode.Outlined)
                                )
                        <br />
                    </div>
                    <div class="col-md-12">
                        <p>Assign Permissions :</p>
                        <div id="newPermissionTreeView"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("saveNewRoleBtn")
                        .Text("Save")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                    @(Html.DevExtreme().Button()
                        .ID("cancelNewRoleBtn")
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ $('#addNewRoleModal').modal('hide'); } </text>)
                        )
                </div>
            </div>
        </div>
    </div>
</div>

