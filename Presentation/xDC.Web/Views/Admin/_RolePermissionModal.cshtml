<div id="rolePermissionEditModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="rolePermissionEditModalContainer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Edit Permission for: <span id="modalTitle"></span></h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>Permissions :</p>
                        <div id="permissionTreeView"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("saveBtn")
                        .Text("Save")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                    @(Html.DevExtreme().Button()
                        .ID("cancelBtn")
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ $('#rolePermissionEditModal').modal('hide'); } </text>)
                        )
                </div>
            </div>
        </div>
    </div>
</div>

