@model dynamic

@{
    ViewBag.Title = "Utility";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>

                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-solid">
                <div class="box-header">
                    <div class="box-title">SMTP Server Test</div>
                    <div class="pull-right">
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p>Receipient</p>
                        </div>
                        <div class="col-md-6">
                            <div id="emailPicker1"></div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <div id="testEmailBtn"></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="box box-solid">
                <div class="box-header">
                    <div class="box-title">Active Directory Users</div>
                    <div class="pull-right">
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p>Email ID</p>
                        </div>
                        <div class="col-md-6">
                            <div id="emailPicker2"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="selectedUserDetails"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box box-solid">
                <div class="box-header">
                    <div class="box-title">Active Directory Sync</div>
                    <div class="pull-right">
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="SyncAdBtn"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    @Scripts.Render("~/bundles/admin/utility");
}