@model xDC_Web.ViewModels.NotificationConfigViewModel

@{
    ViewBag.Title = "Notification Configuration";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header">
                    <div class="box-title">AMSD - Inflow Fund</div>
                    <div class="pull-right">
                    </div>
                </div>
                <div class="box-body">
                    @*<div class="row">
                        <div class="col-md-6">
                            <p>Enable Notification</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme()
                                .CheckBoxFor(m => m.InflowFundEnableNotification)
                                .ID("inFundEnableNotiCb"))
                        </div>
                    </div>*@
                    @*<div class="row">
                        <div class="col-md-6">
                            <p>Enable Admin Modification Notification</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme()
                                .CheckBoxFor(m => m.InflowFundEnableAdminModificationNotification)
                                .ID("inFundEnableAdminEditNotiCb"))
                        </div>
                    </div>*@
                    <div class="row">
                        <div class="col-md-6">
                            <p>Cut Off Time</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme()
                                .DateBoxFor(m => m.InflowFundCutOffTime)
                                .ID("inFundCutOffTimeDb")
                                .Type(DateBoxType.Time))
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        @(Html.DevExtreme().Button()
                            .ID("inflowFundSaveButton")
                            .StylingMode(ButtonStylingMode.Contained)
                            .Text("Save Changes")
                            .Type(ButtonType.Default))
                    </div>
                </div>
            </div>

            <div class="box box-solid">
                <div class="box-header">
                    <div class="box-title">ISSD - Trade Settlement</div>
                    <div class="pull-right">
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p>Contribution Email</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsCnEmail)
                                .ID("cnEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Contribution Email CC</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsCnEmailCc)
                                .ID("cnEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>PE Email</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsPeEmail)
                                .ID("peEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>PE Email CC</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsPeEmailCc)
                                .ID("peEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Property Email</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsPropertyEmail)
                                .ID("propertyEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Property Email CC</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsPropertyEmailCc)
                                .ID("propertyEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Loan Email</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsLoanEmail)
                                .ID("loanEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Loan Email CC</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsLoanEmailCc)
                                .ID("loanEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>FCA Tagging Email</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsFcaTaggingEmail)
                                .ID("fcaTaggingEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Treasury Approval Notification</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TagBoxFor(m => m.tsApprovedTreasury)
                                .ID("approvedTreasury")
                                )
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        @(Html.DevExtreme().Button()
                            .ID("tradeSettlementSaveButton")
                            .StylingMode(ButtonStylingMode.Contained)
                            .Text("Save Changes")
                            .Type(ButtonType.Default))
                    </div>
                </div>
            </div>
            

        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/setting/notificationConfig.js"></script>
}
