@model xDC_Web.ViewModels.NotificationConfigViewModel

@{
    ViewBag.Title = "Notification Configuration";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <div class="box-title">AMSD related email notification</div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    @*<div class="row">
                    <div class="col-md-6">
                        <p>Enable Notification</p>
                    </div>
                    <div class="col-md-6">
                        @(Html.DevExtreme()
                            .CheckBoxFor(m => m.InflowFundEnableNotification)
                            .ID("inFundEnableNotiCb"))
                    </div>
                </div>*@
                    @*<div class="row">
                    <div class="col-md-6">
                        <p>Enable Admin Modification Notification</p>
                    </div>
                    <div class="col-md-6">
                        @(Html.DevExtreme()
                            .CheckBoxFor(m => m.InflowFundEnableAdminModificationNotification)
                            .ID("inFundEnableAdminEditNotiCb"))
                    </div>
                </div>*@
                    <div class="row">
                        <div class="col-md-6">
                            <p>Cut Off Time</p>
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme()
                                .DateBoxFor(m => m.InflowFundCutOffTime)
                                .ID("inFundCutOffTimeDb")
                                .Type(DateBoxType.Time))
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        @(Html.DevExtreme().Button()
                            .ID("inflowFundSaveButton")
                            .StylingMode(ButtonStylingMode.Contained)
                            .Text("Save Changes")
                            .Type(ButtonType.Default))
                    </div>
                </div>
            </div>

            <div class="box box-success">
                <div class="box-header with-border">
                    <div class="box-title">
                        ISSD related email notifications
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h5><strong>Notification Type</strong></h5>
                        </div>
                        <div class="col-md-2">
                            <h5><strong>Enable</strong></h5>
                        </div>
                        <div class="col-md-6">
                            <h5><strong>Receipient</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Contribution Email</p>
                            <p><small><i>*Turn off this will disable this email notification even the CC is on.</i></small></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsCnEmailEnable)
                                .ID("cnEmailEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsCnEmail)
                                .ID("cnEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Contribution Email <strong>CC</strong></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsCnEmailCcEnable)
                                .ID("cnEmailCcEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsCnEmailCc)
                                .ID("cnEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>PE Email</p>
                            <p><small><i>*Turn off this will disable this email notification even the CC is on.</i></small></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsPeEmailEnable)
                                .ID("peEmailEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsPeEmail)
                                .ID("peEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>PE Email <strong>CC</strong></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsPeEmailCcEnable)
                                .ID("peEmailCcEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsPeEmailCc)
                                .ID("peEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Property Email</p>
                            <p><small><i>*Turn off this will disable this email notification even the CC is on.</i></small></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsPropertyEmailEnable)
                                .ID("propertyEmailEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsPropertyEmail)
                                .ID("propertyEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Property Email <strong>CC</strong></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsPropertyEmailCcEnable)
                                .ID("propertyEmailCcEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsPropertyEmailCc)
                                .ID("propertyEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Loan Email</p>
                            <p><small><i>*Turn off this will disable this email notification even the CC is on.</i></small></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsLoanEmailEnable)
                                .ID("loanEmailEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsLoanEmail)
                                .ID("loanEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Loan Email <strong>CC</strong></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsLoanEmailCcEnable)
                                .ID("loanEmailCcEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsLoanEmailCc)
                                .ID("loanEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>FCA Tagging Email</p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsFcaTaggingEmailEnable)
                                .ID("fcaTaggingEmailEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsFcaTaggingEmail)
                                .ID("fcaTaggingEmail")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Treasury Approval Notification</p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tsApprovedTreasuryEnable)
                                .ID("approvedTreasuryEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tsApprovedTreasury)
                                .ID("approvedTreasury")
                                )
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        @(Html.DevExtreme().Button()
                            .ID("tradeSettlementSaveButton")
                            .StylingMode(ButtonStylingMode.Contained)
                            .Text("Save Changes")
                            .Type(ButtonType.Default))
                    </div>
                </div>
            </div>

            <div class="box box-warning">
                <div class="box-header with-border">
                    <div class="box-title">FID Notifications</div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h5><strong>Notification Type</strong></h5>
                        </div>
                        <div class="col-md-2">
                            <h5><strong>Enable</strong></h5>
                        </div>
                        <div class="col-md-6">
                            <h5><strong>Receipient</strong></h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Treasury Form Submission <strong>CC</strong></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tSubmissionEmailCcEnable)
                                .ID("treasurySubmissionEmailCcEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tSubmissionEmailCc)
                                .ID("treasurySubmissionEmailCc")
                                )
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p>Treasury Form Approval <strong>CC</strong></p>
                        </div>
                        <div class="col-md-2">
                            @(Html.DevExtreme().SwitchFor(m => m.tApprovedEmailCcEnable)
                                .ID("treasuryApprovalEmailCcEnable")
                                )
                        </div>
                        <div class="col-md-6">
                            @(Html.DevExtreme().TextBoxFor(m => m.tApprovedEmailCc)
                                .ID("treasuryApprovedEmailCc")
                                )
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        @(Html.DevExtreme().Button()
                            .ID("treasurySaveButton")
                            .StylingMode(ButtonStylingMode.Contained)
                            .Text("Save Changes")
                            .Type(ButtonType.Default))
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/setting/notificationConfig.js"></script>
}
