@model xDC_Web.ViewModels.ISSDLandingPageViewModel

@{
    ViewBag.Title = "ISSD";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                @if (Model.IsAllowedToCreateForm)
                {
                    <div>
                        @(Html.DevExtreme().Button()
                            .Text("New Trade Settlement")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Contained)
                            .OnClick(@<text> function(){ window.location = "@Url.Action("NewTradeSettlement", "Issd")"; } </text>)
                            )
                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-body">
                    <div id="issdGrid" class="grid-container"></div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/iisd/index.js"></script>
}
