@model xDC_Web.ViewModels.EditTradeSettlementFormViewModel
@{
    ViewBag.Title = "Trade Settlement (Editing)";
}


<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">
            </div>
        </div>
    </div>
</section>


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form id="tradeSettlementForm">
                <div class="row">
                    <div class="col-md-12">
                        <div style="margin-bottom: 10px;">
                            <div style="display: inline-block">
                                @(Html.DevExtreme().Button()
                                    .Type(ButtonType.Back)
                                    .StylingMode(ButtonStylingMode.Contained)
                                    .OnClick(@<text> function(){ window.location = "@Url.Action("Index", "Issd")"; } </text>)
                                    )
                            </div>

                            @if (!Model.EnableSaveAdminChanges)
                            {
                                <div style="display: inline-block">

                                    @(Html.DevExtreme().Button()
                                        .ID("submitForApprovalBtn")
                                        .Text("Submit for Approval")
                                        .UseSubmitBehavior(true)
                                        .Type(ButtonType.Default)
                                        .StylingMode(ButtonStylingMode.Contained)
                                        )
                                </div>
                            }

                            @if (Model.EnableDraftButton)
                            {
                                <div style="display: inline-block">
                                    @(Html.DevExtreme().Button()
                                        .ID("saveAsDraftBtn")
                                        .Text("Save as Draft")
                                        .UseSubmitBehavior(true)
                                        .Type(ButtonType.Normal)
                                        .StylingMode(ButtonStylingMode.Contained)
                                        )
                                </div>
                            }

                            @if (Model.EnableSaveAdminChanges)
                            {
                                <div style="display: inline-block">
                                    @(Html.DevExtreme().Button()
                                        .ID("adminEditSaveChangesBtn")
                                        .Text("Save Changes")
                                        .UseSubmitBehavior(true)
                                        .Type(ButtonType.Default)
                                        .StylingMode(ButtonStylingMode.Contained)
                                        )
                                </div>
                            }

                            
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-solid">
                            <div class="box-body">
                                <div class="dx-fieldset">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="dx-field">
                                                <div class="dx-field-label">Settlement Date</div>
                                                <div class="dx-field-value">
                                                    @(Html.DevExtreme().DateBoxFor(m => m.SettlementDate)
                                                        .ID("settlementDateBox")
                                                        .DisplayFormat("dd/MM/yyyy")
                                                        .StylingMode(EditorStylingMode.Filled)
                                                        .ReadOnly(true)
                                                        )
                                                </div>
                                            </div>
                                            <div class="dx-field">
                                                <div class="dx-field-label">Currency</div>
                                                <div class="dx-field-value">
                                                    @(Html.DevExtreme().SelectBoxFor(m => m.Currency)
                                                        .ID("currencySelectBox")
                                                        .StylingMode(EditorStylingMode.Filled)
                                                        .ReadOnly(true)
                                                        )
                                                    <div id="currencySelectBox"></div>
                                                </div>
                                            </div>
                                            <div class="dx-field">
                                                <div class="dx-field-label" style="font-weight: bold">Opening Balance</div>
                                            </div>
                                            <div class="dx-field">
                                                <div class="dx-field-label">Rentas</div>
                                                <div class="dx-field-value">
                                                    @(Html.DevExtreme().NumberBoxFor(m => m.OpeningBalanceRentas)
                                                        .ID("obRentasTb")
                                                        .StylingMode(EditorStylingMode.Filled)
                                                        .ReadOnly(true)
                                                        )
                                                </div>
                                            </div>
                                            <div class="dx-field">
                                                <div class="dx-field-label">MMA</div>
                                                <div class="dx-field-value">
                                                    @(Html.DevExtreme().NumberBoxFor(m => m.OpeningBalanceMma)
                                                        .ID("obMmaTb")
                                                        .StylingMode(EditorStylingMode.Filled)
                                                        .ReadOnly(true)
                                                        )
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8"></div>
                                    </div>
                                </div>
                                
                                <div class="dx-fieldset">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="dx-field">
                                                <div class="dx-field-label" style="font-weight: bold">Daily Trade Settlement</div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div id="tabpanel-container" style="background-color: white;">
                                                <div data-options="dxTemplate : { name: 'equityTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="equityGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'bondTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="bondGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'cpTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="cpGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'notesPaperTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="notesPaperGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'repoTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="repoGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'couponReceivedTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="couponGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'feesTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="feesGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'mtmTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="mtmGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'fxSettlementTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="fxSettlementGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'contributionCreditedTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="contributionCreditedGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'altidTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="altidGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                                <div data-options="dxTemplate : { name: 'othersTab' }" style="padding-top: 10px; overflow: auto">

                                                    <div id="othersGrid" class="grid-container" style="width: 100%"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="dx-fieldset">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="dx-field">
                                                <div class="dx-field-label" style="font-weight: bold">Closing Balance</div>
                                            </div>
                                            <div class="dx-field">
                                                <div class="dx-field-label">Rentas</div>
                                                <div class="dx-field-value">
                                                    <div id="cbRentasTb"></div>
                                                </div>
                                            </div>
                                            <div class="dx-field">
                                                <div class="dx-field-label">MMA</div>
                                                <div class="dx-field-value">
                                                    <div id="cbMmaTb"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="box box-solid">
                            <div class="box-body">
                                <div class="dx-fieldset">
                                    <div class="dx-field">
                                        <div class="dx-field-label">Status</div>
                                        <div class="dx-field-value">
                                            @(Html.DevExtreme().TextBoxFor(m => m.FormStatus)
                                                .StylingMode(EditorStylingMode.Underlined)
                                                .ReadOnly(true))
                                        </div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">Preparer</div>
                                        <div class="dx-field-value">
                                            @(Html.DevExtreme().TextBoxFor(m => m.PreparedBy)
                                                .StylingMode(EditorStylingMode.Underlined)
                                                .ReadOnly(true))
                                        </div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">Prepared Date</div>
                                        <div class="dx-field-value">
                                            @(Html.DevExtreme().DateBoxFor(m => m.PreparedDate)
                                                .StylingMode(EditorStylingMode.Underlined)
                                                .DisplayFormat("dd/MM/yyyy hh:mm a")
                                                .ReadOnly(true))
                                        </div>
                                    </div>
                                    @if (Model.IsApproved)
                                    {
                                        <div class="dx-field">
                                            <div class="dx-field-label">Approved By</div>
                                            <div class="dx-field-value">
                                                @(Html.DevExtreme().TextBoxFor(m => m.ApprovedBy)
                                                    .StylingMode(EditorStylingMode.Underlined)
                                                    .ReadOnly(true))
                                            </div>
                                        </div>
                                        <div class="dx-field">
                                            <div class="dx-field-label">Approved Date</div>
                                            <div class="dx-field-value">
                                                @(Html.DevExtreme().DateBoxFor(m => m.ApprovedDate)
                                                    .StylingMode(EditorStylingMode.Underlined)
                                                    .DisplayFormat("dd/MM/yyyy hh:mm a")
                                                    .ReadOnly(true))
                                            </div>
                                        </div>
                                        <div class="dx-field">
                                            <div class="dx-field-label">Approval/Rejection Notes</div>
                                            <div class="dx-field-value">
                                                @(Html.DevExtreme().TextAreaFor(m => m.ApprovalOrRejectionNotes)
                                                    .StylingMode(EditorStylingMode.Underlined)
                                                    .ReadOnly(true))
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        @if (Model.IsAdminEdited)
                        {
                            <div class="box box-solid" style="background: #FFEBEE">
                                <div class="box-body">
                                    <div class="dx-fieldset">
                                        <div class="dx-field">
                                            <div class="dx-field-label text-red">Admin Edited By</div>
                                            <div class="dx-field-value">
                                                @(Html.DevExtreme().TextBoxFor(m => m.AdminEditedBy)
                                                    .StylingMode(EditorStylingMode.Underlined)
                                                    .ReadOnly(true))
                                            </div>
                                        </div>
                                        <div class="dx-field">
                                            <div class="dx-field-label text-red">Admin Edited Date</div>
                                            <div class="dx-field-value">
                                                @(Html.DevExtreme().DateBoxFor(m => m.AdminEditedDate)
                                                    .StylingMode(EditorStylingMode.Underlined)
                                                    .DisplayFormat("dd/MM/yyyy hh:mm a")
                                                    .ReadOnly(true))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </form>
        </div>
    </div>
</section>

<div id="selectApproverModal" class="modal fade" role="dialog">
    <div class="modal-dialog" id="selectApproverModalContainer">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Select Approver</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div id="approverDropdown"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("submitForApprovalModalBtn")
                        .Text("Submit for Approval")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                </div>
            </div>
        </div>
    </div>
</div>

<div id="loadpanel"></div>

<script type="text/html" id="dxPanelTitle">
    <div style="margin: 4px 0">
        <span style="font-size: small"><%= title %></span><span id="<%= titleId %>" style="float: right;"></span>
    </div>
</script>

@section scripts
{
    <script src="~/Scripts/app/issd/tradeSettlement/edit.js"></script>
}