@model xDC_Web.ViewModels.ViewTradeSettlementFormViewModel

@{
    ViewBag.Title = "Trade Settlement";
    ViewBag.Subtitle = "Part E - Fees, Contribution, Others";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    @(Html.DevExtreme().Button()
                        .Type(ButtonType.Back)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ window.location = "@Url.Action("TradeSettlement", "Issd")"; } </text>)
                        )
                </div>
                @if (Model.ApprovePermission && (Model.FormStatus != "Approved" || Model.FormStatus != "Rejected"))
                {
                    if (Model.FormStatus != "Approved" && Model.FormStatus != "Rejected")
                    {
                        <div>
                            @(Html.DevExtreme().Button()
                                .ID("approveBtn")
                                .Text("Approve")
                                .Icon("check")
                                .Type(ButtonType.Success)
                                .StylingMode(ButtonStylingMode.Contained)
                                )
                        </div>
                        <div>
                            @(Html.DevExtreme().Button()
                                .ID("rejectBtn")
                                .Text("Reject")
                                .Icon("remove")
                                .Type(ButtonType.Normal)
                                .StylingMode(ButtonStylingMode.Contained)
                                )
                        </div>
                    }
                }
                @if (Model.AdminEditPermission)
                {
                    <div>
                        @(Html.DevExtreme().Button()
                            .ID("adminEditBtn")
                            .Text("Admin Edit")
                            .Icon("edit")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Contained)
                            )
                    </div>
                }
                <div>
                    <div id="printBtn"></div>
                </div>
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("viewWorkflowBtn")
                        .Text("Workflow Information")
                        .Icon("detailslayout")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @xDC_HtmlHelper.WorkflowStepper(Model.FormStatus)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="dx-fieldset">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="dx-field">
                                    <div class="dx-field-label">Settlement Date</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().DateBoxFor(m => m.SettlementDate)
                                            .ID("tradesettlementDateBox")
                                            .StylingMode(EditorStylingMode.Filled)
                                            .DisplayFormat("dd/MM/yyyy")
                                            .ReadOnly(true))
                                    </div>
                                </div>
                                <div class="dx-field">
                                    <div class="dx-field-label">Currency</div>
                                    <div class="dx-field-value">
                                        @(Html.DevExtreme().TextBoxFor(m=> m.Currency)
                                            .ID("currencySelectBox")
                                            .StylingMode(EditorStylingMode.Filled)
                                            .ReadOnly(true))
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8"></div>
                        </div>
                    </div>

                    <div class="dx-fieldset">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="dx-field">
                                    <div class="dx-field-label" style="font-weight: bold">Daily Trade Settlement</div>
                                </div>

                                <div id="tabpanel-container" style="background-color: white;">
                                    <div data-options="dxTemplate : { name: 'feesTab' }" style="padding-top: 10px; overflow: auto">

                                        <div id="feesGrid" class="grid-container" style="width: 100%"></div>
                                    </div>
                                    <div data-options="dxTemplate : { name: 'contributionCreditedTab' }" style="padding-top: 10px; overflow: auto">

                                        <div id="contributionCreditedGrid" class="grid-container" style="width: 100%"></div>
                                    </div>
                                    <div data-options="dxTemplate : { name: 'othersTab' }" style="padding-top: 10px; overflow: auto">

                                        <div id="othersGrid" class="grid-container" style="width: 100%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="dx-fieldset">
                        <div class="dx-field">
                            <div class="dx-field-label">Form ID</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.Id)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Status</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.FormStatus)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Preparer</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.PreparedBy)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Prepared Date</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().DateBoxFor(m => m.PreparedDate)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .DisplayFormat("dd/MM/yyyy hh:mm a")
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Approver</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.ApprovedBy)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Approved Date</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().DateBoxFor(m => m.ApprovedDate)
                                    .StylingMode(EditorStylingMode.Underlined)
                                    .DisplayFormat("dd/MM/yyyy hh:mm a")
                                    .ReadOnly(true))
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.IsAdminEdited)
            {
                <div class="box box-solid" style="background: #FFEBEE">
                    <div class="box-body">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label text-red">Admin Edited By</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().TextBoxFor(m => m.AdminEditedBy)
                                        .StylingMode(EditorStylingMode.Underlined)
                                        .ReadOnly(true))
                                </div>
                            </div>
                            <div class="dx-field">
                                <div class="dx-field-label text-red">Admin Edited Date</div>
                                <div class="dx-field-value">
                                    @(Html.DevExtreme().DateBoxFor(m => m.AdminEditedDate)
                                        .StylingMode(EditorStylingMode.Underlined)
                                        .DisplayFormat("dd/MM/yyyy hh:mm a")
                                        .ReadOnly(true))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@Html.Partial("TradeSettlement/_TsApprovalModal")
@Html.Partial("TradeSettlement/_TsRejectionModal")
@Html.Partial("TradeSettlement/_TsWorkflowInfoModal")

<script type="text/html" id="dxPanelTitle">
    <div style="margin: 4px 0">
        <span style="font-size: small"><%= title %></span><span id="<%= titleId %>" style="float: right;"></span>
    </div>
</script>


@section scripts
{
    <script src="~/Scripts/app/issd/tradeSettlement.js"></script>
    <script src="~/Scripts/app/issd/tradeSettlement/partE/view.js"></script>
}