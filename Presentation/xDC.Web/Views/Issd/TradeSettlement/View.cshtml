@model xDC_Web.ViewModels.TradeSettlementFormViewModel

@{
    ViewBag.Title = "View Trade Settlement";
}

<section class="content-header content-toolbar">
    <div class="row">
        <div class="col-md-6">
            <div class="left-container">
                <div>
                    @(Html.DevExtreme().Button()
                        .Type(ButtonType.Back)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ window.location = "@Url.Action("Index", "Issd")"; } </text>)
                        )
                </div>
                @if (Model.ApprovePermission && (Model.FormStatus != "Approved" || Model.FormStatus != "Rejected"))
                {
                    if (Model.FormStatus != "Approved" && Model.FormStatus != "Rejected")
                    {
                        <div>
                            @(Html.DevExtreme().Button()
                                .ID("approveBtn")
                                .Text("Approve")
                                .Icon("check")
                                .Type(ButtonType.Success)
                                .StylingMode(ButtonStylingMode.Contained)
                                )
                        </div>
                        <div>
                            @(Html.DevExtreme().Button()
                                .ID("rejectBtn")
                                .Text("Reject")
                                .Icon("remove")
                                .Type(ButtonType.Normal)
                                .StylingMode(ButtonStylingMode.Contained)
                                )
                        </div>
                    }
                }
                @if (Model.AdminEditPermission)
                {
                    <div>
                        @(Html.DevExtreme().Button()
                            .Text("Admin Edit")
                            .Icon("edit")
                            .Type(ButtonType.Default)
                            .StylingMode(ButtonStylingMode.Contained)
                            .OnClick(@<text> function(){ window.location = "@Url.Action("EditTradeSettlementForm", "Issd")?id=@Model.Id"; } </text>)
                            )
                    </div>
                }
                <div>
                    <div id="printBtn"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="right-toolbar-container" class="right-container">

            </div>
        </div>
    </div>
</section>

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.FormStatus == "Preparation")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item">
                        <div class="step-counter">3</div>
                        <div class="step-name">Done</div>
                    </div>
                </div>
            }

            @if (Model.FormStatus == "Pending Approval")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item active">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item">
                        <div class="step-counter">3</div>
                        <div class="step-name">Done</div>
                    </div>
                </div>
            }

            @if (Model.FormStatus == "Approved")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">3</div>
                        <div class="step-name">Approved</div>
                    </div>
                </div>
            }

            @if (Model.FormStatus == "Rejected")
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item completed">
                        <div class="step-counter">1</div>
                        <div class="step-name">Preparation</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">2</div>
                        <div class="step-name">Pending Approval</div>
                    </div>
                    <div class="stepper-item completed">
                        <div class="step-counter">3</div>
                        <div class="step-name">Rejected</div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
                <div class="box box-solid">
                    <div class="box-body">
                        <div class="dx-fieldset">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="dx-field">
                                        <div class="dx-field-label">Settlement Date</div>
                                        <div class="dx-field-value">
                                            @(Html.DevExtreme().DateBoxFor(m => m.FormDate)
                                                .ID("tradesettlementDateBox")
                                                .StylingMode(EditorStylingMode.Underlined)
                                                .DisplayFormat("dd/MM/yyyy")
                                                .ReadOnly(true))
                                        </div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">Currency</div>
                                        <div class="dx-field-value">
                                            @(Html.DevExtreme().TextBoxFor(m => m.FormCurrency)
                                                .ID("currencySelectBox")
                                                .StylingMode(EditorStylingMode.Underlined)
                                                .ReadOnly(true))
                                        </div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label" style="font-weight: bold">Opening Balance</div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">Rentas</div>
                                        <div class="dx-field-value">
                                            <div id="obRentasTb"></div>
                                        </div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">MMA</div>
                                        <div class="dx-field-value">
                                            <div id="obMmaTb"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8"></div>
                            </div>
                        </div>
                        
                        <div class="dx-fieldset">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="dx-field">
                                        <div class="dx-field-label" style="font-weight: bold">Daily Trade Settlement</div>
                                    </div>

                                    <div id="tabpanel-container" style="background-color: white;">
                                        <div data-options="dxTemplate : { name: 'equityTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="equityGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'bondTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="bondGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'cpTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="cpGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'notesPaperTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="notesPaperGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'repoTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="repoGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'couponReceivedTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="couponGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'feesTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="feesGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'mtmTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="mtmGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'fxSettlementTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="fxSettlementGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'contributionCreditedTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="contributionCreditedGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'altidTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="altidGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                        <div data-options="dxTemplate : { name: 'othersTab' }" style="padding-top: 10px; overflow: auto">

                                            <div id="othersGrid" class="grid-container" style="width: 100%"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="dx-fieldset">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="dx-field">
                                        <div class="dx-field-label" style="font-weight: bold">Closing Balance</div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">Rentas</div>
                                        <div class="dx-field-value">
                                            <div id="cbRentasTb"></div>
                                        </div>
                                    </div>
                                    <div class="dx-field">
                                        <div class="dx-field-label">MMA</div>
                                        <div class="dx-field-value">
                                            <div id="cbMmaTb"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8"></div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

        <div class="col-md-4">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="dx-fieldset">
                        <div class="dx-field">
                            <div class="dx-field-label">Form ID</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.Id)
                                .StylingMode(EditorStylingMode.Underlined)
                                .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Status</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.FormStatus)
                                .StylingMode(EditorStylingMode.Underlined)
                                .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Preparer</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.PreparedBy)
                                .StylingMode(EditorStylingMode.Underlined)
                                .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Prepared Date</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().DateBoxFor(m => m.PreparedDate)
                                .StylingMode(EditorStylingMode.Underlined)
                                .DisplayFormat("dd/MM/yyyy hh:mm a")
                                .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Approver</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().TextBoxFor(m => m.ApprovedBy)
                                .StylingMode(EditorStylingMode.Underlined)
                                .ReadOnly(true))
                            </div>
                        </div>
                        <div class="dx-field">
                            <div class="dx-field-label">Approved Date</div>
                            <div class="dx-field-value">
                                @(Html.DevExtreme().DateBoxFor(m => m.ApprovedDate)
                                .StylingMode(EditorStylingMode.Underlined)
                                .DisplayFormat("dd/MM/yyyy hh:mm a")
                                .ReadOnly(true))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/Scripts/app/issd/tradeSettlement/view.js"></script>
}