<div id="approvalNoteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" id="approvalNoteModalContainer">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Approve Submission</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>Approval Notes (optional) :</p>
                        @(Html.DevExtreme().TextArea()
                            .ID("approvalNoteTextBox")
                            .Height(90)
                            )
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div>
                    @(Html.DevExtreme().Button()
                        .ID("approveFormBtn")
                        .Text("Approve")
                        .Type(ButtonType.Default)
                        .StylingMode(ButtonStylingMode.Contained)
                        )
                    @(Html.DevExtreme().Button()
                        .Text("Cancel")
                        .Type(ButtonType.Normal)
                        .StylingMode(ButtonStylingMode.Contained)
                        .OnClick(@<text> function(){ $('#approvalNoteModal').modal('hide'); } </text>)
                        )
                </div>
            </div>
        </div>
    </div>
</div>
